{
  "name": "@checkdigit/currency",
  "version": "1.0.0",
  "description": "Standard currency handling",
  "typings": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "prettier": "@checkdigit/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkdigit/currency.git"
  },
  "author": "Check Digit, LLC",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/checkdigit/currency/issues"
  },
  "homepage": "https://github.com/checkdigit/currency#readme",
  "devDependencies": {
    "@checkdigit/eslint-config": "^3.1.6",
    "@checkdigit/prettier-config": "^1.0.1",
    "@checkdigit/publish": "^1.0.10",
    "@checkdigit/typescript": "^3.7.5",
    "@types/jest": "^25.1.4",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "scripts": {
    "prepublishOnly": "publish",
    "postpublish": "rimraf dist .npmignore",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "lint": "eslint -f unix --ext .js,.ts src/**",
    "lint:fix": "eslint -f unix --ext .js,.ts src/** --fix",
    "prettier": "prettier --list-different src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts",
    "test": "jest && npm run lint && npm run prettier"
  }
}
